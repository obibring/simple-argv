{
  "name": "ts-simple-argv",
  "version": "1.0.0",
  "module": "dist/node-args.esm.js",
  "description": "Simple node utilities for parsing CLI arguments.",
  "keywords": ["node", "typescript", "cli"],
  "size-limit": [
    {
      "path": "dist/node-args.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/node-args.esm.js",
      "limit": "10 KB"
    }
  ],
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/obibring/ts-argv"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "eslint-config-prettier": "8.8.0",
    "prettier": "2.8.8",
    "size-limit": "^8.1.0",
    "ts-toolbelt": "9.6.0",
    "tsdx": "^0.14.1",
    "tslib": "2.5.0",
    "typescript": "5.4.2",
    "vite": "5.0.12",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "files": ["dist", "src"],
  "license": "MIT",
  "main": "dist/index.js",
  "pnpm": {
    "overrides": {
      "@typescript-eslint/eslint-plugin": "$@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser": "$@typescript-eslint/parser",
      "prettier": "$prettier",
      "typescript": "$typescript"
    }
  },
  "overrides": {
    "tsdx": {
      "@typescript-eslint/eslint-plugin": "5.59.2",
      "@typescript-eslint/parser": "5.59.2",
      "typescript": "$typescript"
    }
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "$@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser": "$@typescript-eslint/parser",
    "prettier": "$prettier",
    "typescript": "$typescript"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "init": "zx scripts/init.mjs",
    "build": "tsdx build && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "clean:dist": "rm -rf dist",
    "lint": "tsdx lint",
    "prepare": "pnpm build",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "vitest"
  }
}
